<resources>
    
    <!-- Base application theme. -->
    <style name = "AppTheme"
        parent = "Theme.AppCompat.Light.NoActionBar">
        <item name = "android:textViewStyle">@style/TextViewStyle</item>
        <item name = "android:homeAsUpIndicator">@drawable/ic_navigate_before_warmgray_24dp</item>
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorPrimary</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    
    <style name = "TextViewStyle"
        parent = "android:Widget.TextView">
        <item name = "android:fontFamily">@font/nanum_gothic</item>
        <item name = "android:textColor">@color/colorFadeBlack</item>
        <item name = "android:textSize">13sp</item>
    </style>
    
    <style name = "ToolbarDefault">
        <item name = "android:background">@android:color/white</item>
        <item name = "titleTextAppearance">@style/ToolbarTitle</item>
        <item name = "android:layout_height">?android:attr/actionBarSize</item>
    </style>
    
    <style name = "ToolbarTitle">
        <item name = "android:textSize">15dp</item>
        <item name = "android:textColor">@color/colorFadeBlack</item>
        <item name = "android:fontFamily">@font/nanum_gothic_bold</item>
    </style>
    
    <style name = "ToolbarMain">
        <item name = "android:background">@android:color/white</item>
        <item name = "titleTextAppearance">@style/ToolbarMainTitle</item>
        <item name = "android:layout_height">40dp</item>
    </style>
    
    <style name = "ToolbarMainTitle">
        <item name = "android:textSize">18sp</item>
        <item name = "android:textColor">@color/colorFadeBlack</item>
        <item name = "android:fontFamily">@font/gotham_black</item>
    </style>
    
    <style name = "FAMMain">
        <item name = "menu_colorNormal">@color/colorPrimary</item>
        <item name = "menu_colorPressed">@color/colorPrimary</item>
        <item name = "android:padding">@dimen/default_top_margin</item>
        <item name = "menu_backgroundColor">#b8f7f7f7</item>
        <item name = "menu_openDirection">up</item>
        <item name = "menu_shadowColor">#80999999</item>
    </style>
    
    <style name = "FABMain">
        <item name = "fab_size">mini</item>
        <item name = "fab_shadowColor">#80999999</item>
        <item name = "fab_colorPressed">@color/colorPrimary</item>
        <item name = "fab_colorNormal">@color/colorPrimary</item>
        <item name = "android:scaleType">centerInside</item>
    </style>
    
    <style name = "LabelFABMain">
        <item name = "android:textSize">12sp</item>
        <item name = "android:paddingEnd">6dp</item>
        <item name = "android:fontFamily">@font/nanum_gothic</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingStart">6dp</item>
        <item name = "android:paddingBottom">3dp</item>
        <item name = "android:paddingTop">3dp</item>
        <item name = "android:textColor">@color/colorPrimary</item>
        <item name = "android:background">@drawable/border_round_purple</item>
    </style>
    
    <style name = "ItemButton">
        <item name = "android:paddingBottom">@dimen/margin_ten</item>
        <item name = "android:layout_marginEnd">15dp</item>
        <item name = "android:paddingStart">@dimen/item_default_margin</item>
        <item name = "android:paddingTop">@dimen/item_default_margin</item>
        <item name = "android:drawablePadding">@dimen/padding_drawable</item>
        <item name = "android:textColor">@color/colorWarmGray</item>
        <item name = "android:textSize">12sp</item>
        <item name = "layout_constraintHorizontal_chainStyle">packed</item>
    </style>
    
    <style name = "ItemButton.Done">
        <item name = "android:drawablePadding">@dimen/padding_drawable</item>
        <item name = "android:textColor">@color/colorPrimary</item>
        <item name = "android:textSize">12sp</item>
    </style>
    
    <style name = "TabLayout">
        <item name = "tabTextColor">@android:color/black</item>
        <item name = "tabMode">fixed</item>
        <item name = "android:background">@android:color/white</item>
        <item name = "tabSelectedTextColor">@color/colorPrimary</item>
        <item name = "tabIndicatorColor">@color/colorPrimary</item>
    </style>
    
    <!--Same with TextSquareCount-->
    <style name = "TextCount">
        <item name = "android:fontFamily">@font/nanum_gothic_bold</item>
        <item name = "android:textColor">@color/colorPrimary</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>
    
    <style name = "SpecificBtn">
        <item name = "android:background">@android:color/white</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textColor">@color/colorWarmGray</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">center</item>
    </style>
    
    <style name = "SpecificTitle">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:fontFamily">@font/nanum_gothic_bold</item>
        <item name = "android:layout_marginBottom">@dimen/margin_ten</item>
    </style>
    
    <style name = "SpecificContent">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_marginBottom">20dp</item>
    </style>
    
    <style name = "DatePickText">
        <item name = "android:textSize">21sp</item>
    </style>

    <style name = "MyPageCardView">
        <item name ="android:background">@android:color/white</item>
        <item name="cardElevation">0.8dp</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>
    
    <style name = "TextSquareCount">
        <item name = "android:defaultValue">@string/zero</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/colorWarmGray</item>
        <item name = "android:textSize">11sp</item>
        <item name = "android:layout_marginStart">5dp</item>
        <item name = "android:background">@drawable/border_rec_gray</item>
        <item name = "android:padding">3dp</item>
    </style>
</resources>
