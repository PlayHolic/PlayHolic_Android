<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme"
        parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "android:textViewStyle">@style/TextViewStyle</item>
        <item name = "android:homeAsUpIndicator">@drawable/ic_navigate_before_warmgray_24dp</item>
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
    </style>
    
    <style name = "TextViewStyle" parent="android:Widget.TextView">
        <item name = "android:fontFamily">@font/nanum_gothic</item>
    </style>
    
    <style name = "ToolbarTitle">
        <item name = "android:textSize">20dp</item>
        <item name = "android:textColor">@color/colorFadeBlack</item>
        <item name = "android:fontFamily">@font/nanum_gothic_bold</item>
    </style>
    
    <style name = "FloatSubButton">
        <item name = "fab_size">mini</item>
        <item name = "fab_colorPressed">@color/colorAccent</item>
        <item name = "fab_colorNormal">@color/colorAccent</item>
        <item name = "android:scaleType">centerInside</item>
    </style>
    
    <style name = "FloatLabel">
        <item name = "android:textSize">12sp</item>
        <item name = "android:paddingEnd">6dp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingStart">6dp</item>
        <item name = "android:paddingBottom">3dp</item>
        <item name = "android:paddingTop">2dp</item>
        <item name = "android:textColor">@color/colorAccent</item>
        <item name = "android:background">@drawable/border_round_purple</item>
    </style>
    
    <style name="ItemButton">
        <item name = "android:padding">15dp</item>
        <item name = "android:drawablePadding">2dp</item>
        <item name = "android:textColor">@color/colorWarmGray</item>
        <item name = "android:textSize">12sp</item>
        <item name = "layout_constraintHorizontal_chainStyle">packed</item>
    </style>
    
    <style name = "TabLayout">
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name = "tabIndicatorColor">@color/colorAccent</item>
    </style>

</resources>
